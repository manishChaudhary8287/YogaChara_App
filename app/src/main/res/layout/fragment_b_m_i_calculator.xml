<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragment.BMICalculatorFragment">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bmi"
        />
    <LinearLayout
        android:id="@+id/BMICalcLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI : "
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/YourBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 00 "
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>


    <EditText
        android:id="@+id/enterWeightBMI"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Enter your weight ( in Kg ) "
        android:textColor="@color/black"
        android:inputType="number|numberDecimal"
        android:background="@drawable/border"
        android:paddingStart="10dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/enterHeightBMI"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Enter your height ( in cm ) "
        android:textColor="@color/black"
        android:inputType="number|numberDecimal"
        android:background="@drawable/border"
        android:paddingStart="10dp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/btnCalcBMI"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Calculate BMI"
        android:textSize="24sp"
        app:cornerRadius="15dp"
        android:elevation="20dp"
        app:elevation="15dp"
        />

</LinearLayout>