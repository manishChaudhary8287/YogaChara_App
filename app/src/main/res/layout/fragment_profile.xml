<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/yoga_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:shapeAppearanceOverlay="@style/Circular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/ProfileFragName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ProfileFragEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email@gmail.com "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ProfileFragPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 12345678970 "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Age :    "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/ProfileFragAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" age "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ProfileFragWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" weight "
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height : "
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/ProfileFragHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" height "
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>
</LinearLayout>