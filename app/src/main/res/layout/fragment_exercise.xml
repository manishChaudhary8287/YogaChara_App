<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ExerciseFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtWarmup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warmup exercise"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />
   <TextView
       android:id="@+id/txtSurya"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Suryanamaskar"
       android:textColor="@color/black"
       android:textSize="26sp"
       android:textAllCaps="true"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtPlank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plank"
        android:textSize="26sp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtFaceYoga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face yoga"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtpushUps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pushups ( diamond )"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/txtSquat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="squat jump"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cfd8dc"
        android:layout_marginTop="15dp"
        />

</LinearLayout>


</ScrollView>